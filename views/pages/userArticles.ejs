<!DOCTYPE html>
<html lang="en">

<head>
   <meta charset="UTF-8">
   <meta http-equiv="X-UA-Compatible" content="IE=edge">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <link rel="stylesheet" href="/stylesheets/explore.css">


   <title>Dashborad</title>
</head>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
   integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
<link rel="stylesheet" href="/stylesheets/home.css">
<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>

<body>

   <script>
      const isLoggedIn = '(<%- isLoggedIn %>)';
      const userArticles = JSON.parse('<%- JSON.stringify(articles) %>')
   </script>

   <!-- alert box -->
   <div
      class="alert d-none w-50 fixed-top opacity-75 fade mx-auto p-1 mt-2 d-flex justify-content-center align-content-center mt-4"
      role="alert" id="alertBox">
      <p class="text-center mt-3" id="alertText">alert text</p>
   </div>


   <!-- Nav section -->
   <section>
      <nav class="mb-4 bg-light mt-0 px-3 px-3">
         <div class="d-flex justify-content-between mt-1">
            <div class="lef">
               <ul class="nav navb nav-tabs" id="myTab" role="tablist">
                  <li class="nav-item" role="presentation">
                     <form method="GET">
                        <button class="nav-link" id="home-tab" data-bs-toggle="tab" data-bs-target="#home-tab-pane"
                           role="tab" aria-controls="home-tab-pane" aria-selected="true" type="submit"
                           formaction="/">Home</button>
                     </form>

                  </li>
                  <li class="nav-item" role="presentation">
                     <form method="GET">
                        <button class="nav-link" data-bs-toggle="tab" data-bs-target="#home-tab-pane" role="tab"
                           aria-controls="home-tab-pane" aria-selected="true" type="submit"
                           formaction="/explore">Explore</button>
                     </form>
                  </li>
                  <form method="GET">
                     <button class="nav-link" data-bs-toggle="tab" data-bs-target="#home-tab-pane" role="tab"
                        aria-controls="home-tab-pane" aria-selected="true" type="submit" formaction="/">Contact</button>
                  </form>
                  <form method="GET">
                     <button class="nav-link" data-bs-toggle="tab" data-bs-target="#home-tab-pane" role="tab"
                        aria-controls="home-tab-pane" aria-selected="true" type="submit"
                        formaction="/about">About</button>
                  </form>
                  <% if(isLoggedIn){%>
                     <form method="GET">
                        <button class="nav-link" data-bs-toggle="tab" data-bs-target="#home-tab-pane" role="tab"
                           aria-controls="home-tab-pane" aria-selected="true" type="submit"
                           formaction="/user/dashboard">Dashboard</button>
                     </form>
                     <form method="GET">
                        <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#my-articles-tab-pane"
                           role="tab" aria-controls="my-articles-tab-pane" aria-selected="true" type="submit"
                           formaction="/user/articles">My
                           Articles</button>
                     </form>
                     <%}%>
            </div>


            <div class="righ">
               <form class="d-flex justify-content-end" role="search" id="homeNav"><input class="form-control me-2"
                     type="search" placeholder="Search" aria-label="Search">
                  <button class="btn btn-outline-primary mx-2" type="submit">Search</button>
                  <% if(isLoggedIn){%>
                     <a class="btn btn-outline-danger mx-2" role="tab" id="loginBtn" href="/user/logout">Logout</a>
                     <%}else{%>
                        <a class="btn btn-outline-danger mx-2" role="tab" id="loginBtn" href="/user/login">Login</a>
                        <a class="btn btn-outline-danger mx-2" role="tab" id="loginBtn" href="/user/register">Signup</a>
                        <%}%>
               </form>
            </div>
         </div>


         <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="home-tab-pane" role="tabpanel" aria-labelledby="home-tab"
               tabindex="0">
            </div>
            <div class="tab-pane fade" id="profile-tab-pane" role="tabpanel" aria-labelledby="profile-tab" tabindex="0">
            </div>
            <div class="tab-pane fade" id="contact-tab-pane" role="tabpanel" aria-labelledby="contact-tab" tabindex="0">
            </div>
            <div class="tab-pane fade" id="disabled-tab-pane" role="tabpanel" aria-labelledby="disabled-tab"
               tabindex="0">...
            </div>
         </div>
      </nav>
   </section>



   <!-- <div id="editor">ssss</div> -->


   <!-- content -->
   <div class="container mt-5 pt-4">
      <div class="row align-items-end mb-4 pb-2">
         <div class="col-md-8">
            <div class="section-title text-center text-md-start">
               <h4 class="title mb-4">Find the perfect jobs</h4>
               <p class="text-muted mb-0 para-desc">Start work with Leaping. Build responsive, mobile-first projects on
                  the
                  web with the world's most popular front-end component library.</p>
            </div>
         </div><!--end col-->

         <div class="col-md-4 mt-4 mt-sm-0 d-none d-md-block">
            <div class="text-center text-md-end">
               <a href="#" class="text-primary">View more Jobs
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                     stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                     class="feather feather-arrow-right fea icon-sm">
                     <line x1="5" y1="12" x2="19" y2="12"></line>
                     <polyline points="12 5 19 12 12 19"></polyline>
                  </svg>
               </a>
            </div>
         </div><!--end col-->
      </div><!--end row-->


      <!-- Modal -->
      <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal"
         data-bs-whatever="@mdo">New Article</button>
      <p id="test"></p>
      <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
         <div class="modal-dialog">
            <div class="modal-content">
               <div class="modal-header">
                  <h1 class="modal-title fs-5" id="exampleModalLabel">New message</h1>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
               </div>
               <div class="modal-body">
                  <form>
                     <div class="mb-3">
                        <label for="title" class="col-form-label">title:</label>
                        <input type="text" class="form-control" id="titleInput" value="">
                     </div>
                     <div class="mb-3">
                        <label for="content" class="col-form-label">content:</label>
                        <div id="editor" style="height: 300px;">
                           <textarea class="form-control" id="contentTextarea" value=""
                              style="height: 300px;"></textarea>
                        </div>
                     </div>
                  </form>
               </div>
               <div class="modal-footer">
                  <!-- <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button> -->
                  <button type="button" class="btn btn-primary" data-bs-dismiss="modal"
                     id="saveArticleBtn">Save</button>
               </div>
            </div>
         </div>
      </div>


      <div class="row" id="articlesDiv"></div>

   </div>

   <script>
      var quill = new Quill('#editor', {
         modules: {
            toolbar: [
               [{ 'header': [1, 2, false] }],
               ['bold', 'italic', 'underline'],
               ['image', 'code-block']
            ]
         },
         placeholder: 'Compose an epic...',
         theme: 'snow'
      });

   </script>

</body>
