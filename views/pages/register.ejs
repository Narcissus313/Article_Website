<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- <link rel="stylesheet" href="/stylesheets/dashboardStyle.css"> -->

    <title>Register</title>
</head>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
<link rel="stylesheet" href="/stylesheets/style.css">


<body>
    <!-- alert box -->
    <div class="alert d-none w-50 fixed-top opacity-75 fade mx-auto p-1 mt-2 d-flex justify-content-center align-content-center"
        role="alert" id="alertBox">
        <p class="text-center mt-3" id="alertText">alert text</p>
    </div>

    <!-- <div class="d-flex align-items-start flex-column">
        <nav>
            
        </nav>
    </div> -->
    <div class="container-fluid" id="profile-data"></div>

    <section>
        <nav class="mb-2 bg-light mt-0 px-3">
            <div class="d-flex justify-content-between mt-1">
                <div class="lef">
                    <ul class="nav navb nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <form method="GET">
                                <button class="nav-link" id="home-tab" data-bs-toggle="tab"
                                    data-bs-target="#home-tab-pane" role="tab" aria-controls="home-tab-pane"
                                    aria-selected="true" type="submit" formaction="/">Home</button>
                            </form>

                        </li>
                        <li class="nav-item" role="presentation">
                            <form method="GET">
                                <button class="nav-link" id="articles-tab" data-bs-toggle="tab"
                                    data-bs-target="#articles-tab-pane" role="tab" aria-controls="articles-tab-pane"
                                    aria-selected="true" type="submit" formaction="/explore">Explore</button>
                            </form>
                        </li>
                        <form method="GET">
                            <button class="nav-link" id="contact-tab" data-bs-toggle="tab"
                                data-bs-target="#contact-tab-pane" role="tab" aria-controls="contact-tab-pane"
                                aria-selected="true" type="submit" formaction="/contact">Contact</button>
                        </form>
                        <form method="GET">
                            <button class="nav-link" id="about-tab" data-bs-toggle="tab"
                                data-bs-target="#about-tab-pane" role="tab" aria-controls="about-tab-pane"
                                aria-selected="true" type="submit" formaction="/about">About</button>
                        </form>

                </div>
                <div class="righ">
                    <form class="d-flex justify-content-end" role="search">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-primary" type="submit">Search</button>
                        <form method="GET">
                            <button class="btn btn-outline-success mx-2" id="login-tab" data-bs-toggle="tab"
                                data-bs-target="#login-tab-pane" role="tab" aria-controls="login-tab-pane"
                                aria-selected="true" type="submit" formaction="/user/login">Login</button>
                        </form>
                    </form>
                </div>
            </div>


            </ul>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="home-tab-pane" role="tabpanel" aria-labelledby="home-tab"
                    tabindex="0">
                </div>
                <div class="tab-pane fade" id="profile-tab-pane" role="tabpanel" aria-labelledby="profile-tab"
                    tabindex="0">
                </div>
                <div class="tab-pane fade" id="contact-tab-pane" role="tabpanel" aria-labelledby="contact-tab"
                    tabindex="0">
                </div>
                <div class="tab-pane fade" id="disabled-tab-pane" role="tabpanel" aria-labelledby="disabled-tab"
                    tabindex="0">...
                </div>
            </div>
        </nav>
    </section>

    <div class="container-lg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
                    <div class="d-table-cell align-middle">

                        <div class="text-center mt-1">
                            <h1 class="h2">Get started</h1>
                        </div>

                        <div class="card">
                            <div class="card-body">
                                <div class="m-sm-4">
                                    <form form autocomplete="off" action="/user/register" method="POST">
                                        <div class="form-group mt-3" form autocomplete="off">
                                            <!-- <label class="mt-1">Firstname</label> -->
                                            <input class="form-control form-control-lg fs-6" type="text"
                                                name="firstName" placeholder="Enter your firstname" id="firstName">
                                        </div>
                                        <div class="form-group mt-3">
                                            <!-- <label class="mt-2">Lastname</label> -->
                                            <input class="form-control form-control-lg fs-6 mt-2" type="text"
                                                name="lastName" placeholder="Enter your lastname name" id="lastName">
                                        </div>
                                        <div class="form-group mt-3">
                                            <select class="form-select form-select-lg text-black fs-6"
                                                aria-label=".form-select-lg example" id="gender">
                                                <option selected>Gender</option>
                                                <option value=" male">male</option>
                                                <option value="female">female</option>
                                            </select>
                                        </div>
                                        <div class="form-group mt-2">
                                            <label class="mt-0">Username</label>
                                            <input class="form-control form-control-lg fs-6" type="text" name="username"
                                                placeholder="Enter your username" id="username">
                                        </div>
                                        <div class="form-group">
                                            <label class="mt-2">Phone Number</label>
                                            <input class="form-control form-control-lg fs-6" type="text"
                                                name="phoneNumber" placeholder="Enter your phone pumber"
                                                id="phoneNumber">
                                        </div>
                                        <div class="form-group">
                                            <label class="mt-2" for="inputNewPassword">Password</label>
                                            <input class="form-control form-control-lg fs-6" type="password"
                                                name="password" placeholder="Enter your password" id="inputNewPassword">
                                        </div>
                                        <div class="form-group">
                                            <label class="mt-2" for="inputNewPasswordConfirm">Confirm</label>
                                            <input class="form-control form-control-lg fs-6" type="password"
                                                name="password" placeholder="Enter your password"
                                                id="inputNewPasswordConfirm">
                                        </div>
                                        <div class="text-center mt-4 mb-0">
                                            <button class="btn btn-lg btn-primary" id="registerBtn">Sign up</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>



</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
    crossorigin="anonymous"></script>
<script src="/javascripts/register.js"></script>
<script src="/javascripts/main.js"></script>

</html>